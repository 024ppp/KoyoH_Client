<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.administrator.koyoh_client.MainActivity">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
    android:weightSum="1">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:theme="@style/ToolbarTheme"
            app:titleTextAppearance="@style/ToolbarTextAppearance"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSagyo"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/frame_textview"
                android:textSize="30sp"
                android:layout_marginRight="5dp"
                android:text="作業者" />

            <EditText
                android:id="@+id/txtSagyo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:background="@drawable/frame_edittext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <!-- チャット内容入力 -->

            <TextView
                android:id="@+id/lblVkon"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/frame_textview"
                android:textSize="30sp"
                android:layout_marginRight="5dp"
                android:text="Vコン" />

            <EditText
                android:id="@+id/txtVkon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:background="@drawable/frame_edittext" />

        </LinearLayout>

        <!-- サーバからのメッセージ受信 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblAmime1"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/frame_textview"
                android:textSize="30sp"
                android:layout_marginRight="5dp"
                android:text="網" />

            <EditText
                android:id="@+id/txtAmime1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:background="@drawable/frame_edittext" />

        </LinearLayout>

        <TextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_weight="0.25"
            android:background="#ffff"
            android:gravity="center_vertical"
            android:textColor="#FF0000"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="クリア" />

            <Button
                android:id="@+id/btnUpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="登録" />
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
